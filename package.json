{
  "name": "app-backend",
  "version": "0.1.0",
  "description": "The backend API for the Coding Garden community app.",
  "main": "src/index.js",
  "jest": {
    "testEnvironment": "node",
    "preset": "jest-puppeteer",
    "collectCoverageFrom": [
      "!**node_modules**",
      "src/api/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/index.js",
    "dev": "cross-env NODE_ENV=development npm run seed && nodemon src/index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --coverage --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .js",
    "seed": "node src/tasks/seed/localDevSeed.js",
    "deploy": "./deploy.sh",
    "format": "prettier --write src/**/*.js",
    "buildAPIDoc": "swagger-ui-watcher ./Swag/MainSwag.yaml --bundle=./docs/APIs.json",
    "coverage:open": "node src/tasks/openCoverage.js"
  },
  "repository": "https://github.com/CodingGardenCommunity/app-backend.git",
  "author": "Coding Garden Community App",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run format && yarn run test"
    }
  },
  "dependencies": {
    "colors": "^1.3.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "mongoose": "^5.4.17",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.3.0",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "jest-puppeteer": "^4.3.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.17.1",
    "puppeteer": "^1.19.0",
    "supertest": "^4.0.2"
  }
}
